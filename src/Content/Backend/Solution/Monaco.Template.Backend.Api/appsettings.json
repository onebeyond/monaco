{
	"AllowedHosts": "*",

	"ConnectionStrings": {
		"AppDbContext": ""
	},

	"CorsPolicies": [
		{
			"Name": "Default",
			"Origins": [ "http://localhost:4200" ],
			"Headers": [ "Authorization", "Content-Type" ],
			"Methods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ]
		}
	],

	//#if (auth)
	"SSO": {
		"Authority": "http://localhost:8080/realms/monaco-template",
		"Audience": "monaco-template-api",

		"SwaggerUIClientId": "monaco-template-api-swagger-ui",
		"SwaggerUIClientSecret": ""
	},
	
	//#endif
	//#if (massTransitIntegration)
	"MessageBus": {
		"ASBConnectionString": ""
	},
	
	//#endif
	//#if (filesSupport)
	"BlobStorage": {
		"ConnectionString": "UseDevelopmentStorage=true",
		"Container": "files-store"
	},
	
	//#endif
	"Swagger": {
		"ApiDescription": "Monaco Template API",
		"SwaggerUIAppName": "Monaco Template API - Swagger UI",
		"Title": "Monaco Template API",
		"Description": "Monaco Template - API",
		"ContactName": "One Beyond",
		"ContactEmail": "",
		"TermsOfService": "https://www.one-beyond.com",
		//#if (auth)
		"AuthEndpoint": "http://localhost:8080/realms/monaco-template/protocol/openid-connect/auth",
		"TokenEndpoint": "http://localhost:8080/realms/monaco-template/protocol/openid-connect/token"
		//#endif
	},

	"ApplicationInsights": {
		"InstrumentationKey": ""
	},

	"Serilog": {
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"Microsoft": "Warning",
				"System": "Warning",
				"Microsoft.Hosting.Lifetime": "Information"
			}
		},
		"WriteTo": [
			{ "Name": "Console" },
			{
				"Name": "ApplicationInsights",
				"Args": {
					"connectionString": "InstrumentationKey=00000000-0000-0000-0000-000000000000;IngestionEndpoint=https://uksouth-0.in.applicationinsights.azure.com/;LiveEndpoint=https://uksouth.livediagnostics.monitor.azure.com/",
					"telemetryConverter": "Monaco.Template.Backend.Common.Serilog.ApplicationInsights.TelemetryConverters.OperationTelemetryConverter, Monaco.Template.Backend.Common.Serilog"
				}
			}
		],
		"Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithOperationId" ]
	},

	"AuditLog": {
		"MinimumLevel": {
			"Default": "Information"
		},
		"AuditTo": [
			{ "Name": "Console" },
			{
				"Name": "File",
				"Args": {
					"path": "logs/audit-log-.txt",
					"rollingInterval": "Day"
				}
			}
		],
		"Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithOperationId" ]
	}
}